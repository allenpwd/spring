<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!-- 告诉ContextLoadListener用注解的方式加载bean -->
  <context-param>
    <param-name>contextClass</param-name>
    <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
  </context-param>
  <!-- spring配置的路径 -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>pwd.allen.config.MainConfig</param-value>
    <!--<param-value>classpath:bean.xml</param-value>-->
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>dispatcherServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <!--使用注解配置类方式配置spring mvc的上下文，如果没有指定，则默认为xml方式，xml配置文件路径为：<servlet-name>-servlet.xml-->
    <init-param>
      <param-name>contextClass</param-name>
      <param-value>
        org.springframework.web.context.support.AnnotationConfigWebApplicationContext
      </param-value>
    </init-param>
    <!--多个用逗号分隔-->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>pwd.allen.config.MvcConfig</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcherServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
